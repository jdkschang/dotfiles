# Navigation
alias ..="builtin cd .."
alias ...="builtin cd ../.."

# oa
alias proj="builtin cd ~/Dropbox\ \(Personal\)/Projects/"
alias oa="builtin cd ~/Dropbox\ \(Personal\)/Projects/oa_control/web/laravel"
alias home="builtin cd ~/Dropbox\ \(Personal\)/Projects/homestead"

# Shortcuts
alias d="cd ~/Dropbox\ \(Personal\)"
alias df="cd ~/dotfiles"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"

alias h="history"
alias jo="jobs"
alias j="z"
alias cask="brew cask"
alias v="nvim"
alias e="emacs -nw"
alias mux="tmuxinator"

# Add line numbers here as they aren't desirable by default (make git log ugly)
alias less='less -N'

alias srcz="source ~/.zshrc"

# tmux
alias tls="tmux ls"
alias tnew="tmux new -s"
alias tkill="tmux kill-session -t"
alias tat="tmux attach -t"
alias tatt="new-tmux-from-dir-name"
alias td="tmux detach"

# npm
alias n='npm'
