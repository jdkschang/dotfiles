abbr "c" "clear"
abbr "v" "nvim"
abbr "chmox" "chmod +x"
abbr "scu" "systemctl --user"
abbr "sc" "sudo systemctl"

# Navigation
abbr "..." "cd ../.."
abbr "...." "cd ../../.."
abbr "....." "cd ../../../.."

# Projects
abbr "proj" "cd ~/Dropbox/Projects/"
abbr "projgc" "cd ~/Projects/"
abbr "rwa" " cd ~/Projects/react-web-app"

# Shortcuts
abbr "dl" "cd ~/Downloads"
abbr "dfs" "cd ~/dotfiles"

abbr "h" "history"
abbr "jo" "jobs"
abbr "e" "emacs -nw"
abbr "ec" "TERM=xterm-256color-it emacsclient"

# Services
abbr "bstart" "brew services start"
abbr "bstop" "brew services stop"

abbr "bsrcs" "brew services restart chunkwm; brew services restart skhd;"
